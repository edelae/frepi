# Frepi Agent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API Key for embeddings (text-embedding-3-small)
OPENAI_API_KEY=sk-...

# Supabase Connection
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Telegram webhook URL (for production deployment)
# Leave empty for local development with polling
TELEGRAM_WEBHOOK_URL=

# Application environment
ENVIRONMENT=development  # development, staging, production

# Logging level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# =============================================================================
# ADVANCED SETTINGS (usually don't need to change)
# =============================================================================

# Embedding model configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Vector search settings
VECTOR_SEARCH_LIMIT=10
HIGH_CONFIDENCE_THRESHOLD=0.85
MEDIUM_CONFIDENCE_THRESHOLD=0.70

# Price validation
PRICE_FRESHNESS_DAYS=30
